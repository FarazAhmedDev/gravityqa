{
  "name": "gravityqa",
  "version": "1.0.0",
  "description": "AI-Native Test Automation Platform for macOS",
  "main": "electron/main.js",
  "author": "GravityQA Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd backend && source venv/bin/activate && python main.py",
    "dev:electron": "electron .",
    "build": "./scripts/build-mac.sh",
    "build:frontend": "vite build",
    "build:electron": "tsc -p electron && electron-builder --mac",
    "package": "npm run build:frontend && electron-builder --mac",
    "package:dmg": "npm run build:frontend && electron-builder --mac dmg",
    "start": "NODE_ENV=development electron .",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.5",
    "clsx": "^2.1.0",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1",
    "webdriverio": "^9.21.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.gravityqa.app",
    "productName": "GravityQA",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "!backend/venv/**/*",
      "!backend/__pycache__/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "title": "GravityQA ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
